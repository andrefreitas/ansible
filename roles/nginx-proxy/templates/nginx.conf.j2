server {
   listen 80;
   server_name {{domain}};

   return 301 https://{{domain}}$request_uri;
}

server {
  listen 443 ssl;
  server_name {{domain}};

  ssl_certificate     /srv/ssl/{{domain}}.crt;
  ssl_certificate_key /srv/ssl/{{domain}}.key;
  ssl_protocols       TLSv1 TLSv1.1 TLSv1.2;
  ssl_ciphers         HIGH:!aNULL:!MD5;

  location / {
    proxy_pass http://localhost:{{port}};
  }
}
